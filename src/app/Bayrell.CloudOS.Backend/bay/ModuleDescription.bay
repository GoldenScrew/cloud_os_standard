namespace Bayrell.CloudOS.Backend;

use Runtime.Core.Context;
use Runtime.Core.Entity;
use Runtime.Core.LambdaChain;
use Runtime.Web.Auth.AuthBackend;
use Runtime.Web.RenderDriver;


static class ModuleDescription
{
	
	/**
	 * Returns module name
	 * @return string
	 */
	pure string getModuleName() => "Bayrell.CloudOS.Backend";
	
	
	
	/**
	 * Returns module name
	 * @return string
	 */
	pure string getModuleVersion() => "0.0.1";
	
	
	
	/**
	 * Returns required modules
	 * @return Map<string>
	 */
	pure Map<string> requiredModules() => 
	{
		/* Backend */
		#ifdef BACKEND then
		'Runtime.Cron': '*',
		'Runtime.Task': '*',
		'Runtime.Web.Backend': '*',
		#endif
	};
	
	
	
	/**
	 * Returns enities
	 */
	pure Collection<Dict> entities() => 
	[
		/* Register api */
		new Entity{ "name": "Bayrell.CloudOS.Backend.API.Balancer" },
		new Entity{ "name": "Bayrell.CloudOS.Backend.API.DomainCrud" },
		new Entity{ "name": "Bayrell.CloudOS.Backend.API.LayerCrud" },
		new Entity{ "name": "Bayrell.CloudOS.Backend.API.LayerRouteCrud" },
		new Entity{ "name": "Bayrell.CloudOS.Backend.API.NginxFileCrud" },
		new Entity{ "name": "Bayrell.CloudOS.Backend.API.ServiceCrud" },
		new Entity{ "name": "Bayrell.CloudOS.Backend.API.SpaceCrud" },
		new Entity{ "name": "Bayrell.CloudOS.Backend.API.TopMenuCrud" },
		new Entity{ "name": "Bayrell.CloudOS.Backend.API.UserCrud" },
		
		/* Tasks */
		new Entity{ "name": "Bayrell.CloudOS.Backend.DockerTasks" },
		
		/* Render Chain. Route after */
		new LambdaChain
		{
			"name": RenderDriver::RENDER_CHAIN,
			"value": "Bayrell.CloudOS.Backend.Helper::renderChainRouteAfter",
			"pos": RenderDriver::RENDER_CHAIN_CALL_ROUTE_AFTER,
		},
		
		/* Auth Chain. Check token */
		new LambdaChain
		{
			"name": AuthBackend::CHAIN_CHECK_TOKEN,
			"value": "Bayrell.CloudOS.Backend.Helper::chainCheckToken",
			"is_async": true,
		},
		
		/* Auth Chain. Login */
		new LambdaChain
		{
			"name": AuthBackend::CHAIN_LOGIN,
			"value": "Bayrell.CloudOS.Backend.Helper::chainLogin",
			"is_async": true,
		},
		
		/* Auth Chain. Logout */
		new LambdaChain
		{
			"name": AuthBackend::CHAIN_LOGOUT,
			"value": "Bayrell.CloudOS.Backend.Helper::chainLogout",
			"is_async": true,
		},
	];
	
}