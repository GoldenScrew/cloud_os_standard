<class version="1.0"
	name="Bayrell.CloudOS.Design.LayersPage" extends="Runtime.Web.Component" 
	module="Bayrell.CloudOS" model="Bayrell.CloudOS.Design.LayersPageModel"
>

<use name="Runtime.lib" />
<use name="Runtime.Exceptions.RuntimeException" />
<use name="Runtime.Core.Message" />
<use name="Runtime.Core.RemoteCallAnswer" />
<use name="Runtime.Web.LayoutModel" />
<use name="Runtime.Web.RenderContainer" />
<use name="Runtime.Web.RenderDriver" />
<use name="Runtime.Web.Route" />
<use name="Runtime.Web.RouteList" />
<use name="Runtime.Web.Events.MouseClickEvent" />
<use name="Runtime.Web.CRUD.CrudPage" component="true" />
<use name="Runtime.Web.CRUD.CrudPageModel" />
<use name="Runtime.Web.CRUD.FieldInfo" />
<use name="Runtime.Web.Input.Input" component="true" />
<use name="Runtime.Web.Input.Label" component="true" />
<use name="Runtime.Web.Input.Select" component="true" />
<use name="Runtime.Web.Input.SelectText" component="true" />
<use name="Runtime.Web.Input.TextArea" component="true" />
<use name="Runtime.Web.Table.TableModel" />
<use name="Bayrell.CloudOS.Design.LayersForm" component="true" />
<use name="Bayrell.CloudOS.Design.LayersPage" />
<use name="Bayrell.CloudOS.Design.LayersPageModel" />


<style>
</style>


<script>

/**
 * Route Action
 * @return RenderContainer
 */
@Route{ "uri": "/design/layers/", "name": "app.design.layers" }
static async RenderContainer actionIndex(RenderContainer container)
{
	/* Create model */
	LayersPageModel page_model = new LayersPageModel
	{
		"crud": await CrudPageModel::crudSearch
		(
			{
				"object_name": "Bayrell.CloudOS.Layers",
				"interface_name": "core.crud",
				"method_name": "search",
			},
			container
		)
	};
	
	/* Set title */
	container <= layout <= title <= "Layers";
	container <= layout <= layout_name <= "default";
	
	/* Set model */
	container <= layout <= page_class <= classof LayersPage;
	container <= layout <= page_model <= page_model;
	
	return [ container ];
}

</script>



<template name="render">
	
	%var Collection softwares = model.crud
		|> attr "foreigns", "softwares", "items"
		|> lib::map
		(
			Dict (Dict item) =>
			{
				"id": item["api_name"],
				"value": item["api_name"] ~ " (" ~ item["name"] ~ ")",
				"item": item,
			}
		);
	%var Collection spaces = model.crud
		|> attr "foreigns", "spaces", "items"
		|> lib::map
		(
			Dict (Dict item) =>
			{
				"id": item["space_id"],
				"value": item["name"],
				"item": item,
			}
		);
	
	%var Collection<FieldInfo> struct =
	[
		new FieldInfo
		{
			"api_name": "number",
			"label": "",
			"class_name": classof Label,
			"class_settings":
			{
				"render": CrudPage::fieldNumber,
			},
		},
		new FieldInfo
		{
			"api_name": "layer_id",
			"label": "Layer id",
			"primary": true,
		},
		new FieldInfo
		{
			"api_name": "software_api_name",
			"label": "Software api name",
			"class_name": classof Select,
			"class_name_table": classof Label,
			"class_settings":
			{
				"show_select_value_filter": true,
				"show_select_value": true,
				"options": softwares,
			},
		},
		new FieldInfo
		{
			"api_name": "backend",
			"label": "backend",
			"class_name_table": classof Label,
			"class_settings":
			{
				"options": spaces,
				"render": html (LayoutModel layout, var model, Dict params, var content)
				{
					Dict row = params["row-data"];
					return row["software", "backend"];
				},
			}
		},
		new FieldInfo
		{
			"api_name": "spaces",
			"label": "Spaces",
			"class_name_table": classof Label,
			"class_settings":
			{
				"options": spaces,
				"render": html (LayoutModel layout, var model, Dict params, var content) use (spaces)
				{
					return <div class='spaces'>
						%for (int i=0; i<model.count(); i++)
						{
							%var Dict item = model[i];
							%var string space_id = item["space_id"];
							%var string uri = item["uri"];
							%var Dict space = spaces.findItem( lib::equalAttr("id", space_id) );
							%var string name = space["item", "domain"] ~ uri;
							<div class='spaces_item'>{ name }</div>
						}
					</div>;
				},
			}
		},
		new FieldInfo
		{
			"api_name": "name",
			"label": "Layer name",
			"class_name": classof Input,
			"class_name_table": classof Label,
		},
		new FieldInfo
		{
			"api_name": "uid",
			"label": "UID",
			"class_name": classof Input,
			"class_name_table": classof Label,
			"can_update": false,
		},
		new FieldInfo
		{
			"api_name": "edit-buttons",
			"label": "",
			"class_name": classof Label,
			"class_settings":
			{
				"render": html (LayoutModel layout, var model, Dict params, var content)
				{
					return
					[
						CrudPage::buttonEdit(layout, model, params, content),
						CrudPage::buttonDelete(layout, model, params, content),
					];
				},
			},
		},
	];
	
	%var Collection<string> filter_fields =
	[
		"software_api_name",
		"name",
		"uid",
	];
	
	%var Collection<string> form_fields =
	[
		"software_api_name",
		"name",
		"uid",
	];
	
	%var Collection<string> table_fields =
	[
		"number",
		"software_api_name",
		"backend",
		"name",
		"spaces",
		"uid",
		"edit-buttons"
	];
	
	%var Dict messages =
	{
		"add": _("Bayrell.CloudOS", "Add layer"),
		"delete": string (Dict item) =>
			_("Runtime.Web.CRUD", "Do you realy want to delete '%name%' ?", { "name": item["name"] } ),
	};
	
	<CrudPage @name="crud"
		object_name="Bayrell.CloudOS.Layers"
		struct={ struct }
		filter_fields={ filter_fields }
		form_fields={ form_fields }
		table_fields={ table_fields }
		messages={ messages }
		form={{
			"class_name": classof LayersForm,
			"spaces": spaces,
		}}
	/>
	
</template>


<script type="frontend">

</script>


</class>