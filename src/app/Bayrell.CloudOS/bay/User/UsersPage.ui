<class version="1.0"
	name="Bayrell.CloudOS.User.UsersPage" extends="Runtime.Web.Component" 
	module="Bayrell.CloudOS" model="Bayrell.CloudOS.User.UsersPageModel"
>

<use name="Runtime.Exceptions.RuntimeException" />
<use name="Runtime.Core.Message" />
<use name="Runtime.Core.RemoteCallAnswer" />
<use name="Runtime.Web.LayoutModel" />
<use name="Runtime.Web.RenderDriver" />
<use name="Runtime.Web.Events.MouseClickEvent" />
<use name="Runtime.Web.CRUD.CrudPage" component="true" />
<use name="Runtime.Web.CRUD.CrudPageModel" />
<use name="Runtime.Web.Input.Input" component="true" />
<use name="Runtime.Web.Input.Label" component="true" />
<use name="Runtime.Web.Input.Select" component="true" />
<use name="Runtime.Web.Input.SelectText" component="true" />
<use name="Runtime.Web.Table.TableModel" />
<use name="Bayrell.CloudOS.UsersPageModel" />

<style>
</style>


<template name="render">
	
	%var Dict crud_settings =
	{
		"number":
		{
			"api_name": "number",
			"label": "",
			"class_name": classof Label,
			"class_settings":
			{
				"render": html (LayoutModel layout, var model, Dict params, var content)
				{
					TableModel table_model = params["table-model"];
					int index = params["row-index"];
					if (table_model)
					{
						return index + 1;
					}
					return "";
				},
			},
		},
		"name":
		{
			"api_name": "name",
			"label": "Name",
			"class_name": classof Input,
			"class_name_table": classof Label,
		},
		"banned":
		{
			"api_name": "banned",
			"label": "Banned",
			"class_name": classof Select,
			"class_name_table": classof SelectText,
			"class_settings":
			{
				"select_value": false,
				"options":
				[
					{"id": 0, "value": "No"},
					{"id": 1, "value": "Yes"},
				],
			}
		},
		"edit-buttons":
		{
			"api_name": "edit-buttons",
			"label": "",
			"class_name": classof Label,
			"class_settings":
			{
				"render": html (LayoutModel layout, var model, Dict params, var content)
				{
					return
					[
						CrudPage::buttonEdit(layout, model, params, content),
						CrudPage::buttonDelete(layout, model, params, content),
					];
				},
			},
		},
		"password1":
		{
			"api_name": "password1",
			"label": "Password",
			"class_name": classof Input,
			"class_settings":
			{
				"type": "password",
			},
		},
		"password2":
		{
			"api_name": "password2",
			"label": "Password",
			"class_name": classof Input,
			"class_settings":
			{
				"type": "password",
			},
		},
	};
	
	%var Collection<string> form_fields =
	[
		"name",
		"banned",
		"password1",
		"password2",
	];
	
	%var Collection<string> table_fields =
	[
		"number",
		"name",
		"banned",
		"edit-buttons"
	];
	
	%var Dict messages =
	{
		"add": _("Bayrell.CloudOS", "Add user")
	};
	
	<CrudPage @name="crud"
		object_name="Bayrell.CloudOS.Users"
		crud_settings={ crud_settings }
		form_fields={ form_fields }
		table_fields={ table_fields }
		messages={ messages }
	/>
	
</template>


<script type="frontend">

</script>

</class>